{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "dom", "dom.iterable"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "react-vite-library": ["src/index.ts"],
      "@/*": ["src/*"],
      "tests/*": ["src/tests/*"]
    }
  },
  "include": ["src", "src/tests/setup.ts", "src/tests/utils/*"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["vite.config.ts", "node_modules", "node_modules/.pnpm/**"]
}
